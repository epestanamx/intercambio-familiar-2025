generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Participant {
  id            String       @id @default(uuid())
  name          String
  slug          String       @unique
  assignedTo    Participant? @relation("SecretFriend", fields: [assignedToId], references: [id])
  assignedToId  String?      @unique
  assignedBy    Participant? @relation("SecretFriend")
  hasRevealed   Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}
